{
  "name": "landing-page",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "windcss": "npx tailwindcss -i ./src/input.css -o ./public/assets/css/output.css --watch",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy:js": "copyfiles -u 1 ./src/assets/js/*.js public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"/src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:js": "onchange \"src/assets/js/*.js\" -- npm run copy:js",
    "watch": "npm-run-all --parallel watch:*",
    "start": "npm-run-all copy --parallel watch windcss",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/assets/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.13",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.7"
  }
}
